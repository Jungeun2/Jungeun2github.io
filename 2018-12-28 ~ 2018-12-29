// 2-7

package ex;

import java.util.*;

public class Ch02Ex02_07 {

	public static void main(String[] args) {
		
		Scanner scanner = new Scanner (System.in);
		
		
		System.out.print("height = ");
		int input = scanner.nextInt();
		System.out.printf("Your height is %d cm.",input);
	}
}

