// 2-10

package ex;

import java.util.*;

public class Ch02Ex02_10 {

	public static void main(String[] args) {
		
		Scanner scanner = new Scanner (System.in);
		
		int a = scanner.nextInt();
		int b = scanner.nextInt();
		System.out.printf("%d + %d = %d",a,b,a+b);
	}
}

